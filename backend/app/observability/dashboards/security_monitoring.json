{
  "dashboard": {
    "title": "RegOps Security Monitoring",
    "description": "Critical security metrics and violation detection for Belgian RegOps Platform",
    "version": "1.0.0",
    "refresh_interval": "5s",
    "time_range": {
      "from": "now-1h", 
      "to": "now"
    },
    "tags": ["regops", "security", "pii", "compliance", "audit"],
    "panels": [
      {
        "id": 1,
        "title": "PII Violations (MUST = 0)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "pii_violations_total",
            "legendFormat": "Total PII Violations"
          },
          {
            "expr": "increase(pii_violations_total[1h])",
            "legendFormat": "Violations Last Hour"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "red", "value": 0.1}
              ]
            },
            "unit": "short",
            "min": 0
          }
        },
        "options": {
          "orientation": "vertical",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "colorMode": "background"
        },
        "alert": {
          "name": "PII Violation Detected",
          "frequency": "5s",
          "conditions": [
            {
              "query": {"queryType": "", "refId": "A"},
              "reducer": {"type": "last", "params": []},
              "evaluator": {"params": [0], "type": "gt"}
            }
          ],
          "executionErrorState": "alerting",
          "noDataState": "no_data",
          "for": "0s"
        }
      },
      {
        "id": 2,
        "title": "Budget Kill Switch Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "budget_kill_switch_active",
            "legendFormat": "Kill Switch Active"
          },
          {
            "expr": "budget_utilization_percent",
            "legendFormat": "Budget Utilization %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "orange", "value": 90},
                {"color": "red", "value": 95}
              ]
            },
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Budget Utilization %"},
              "properties": [
                {
                  "id": "unit",
                  "value": "percent"
                }
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Kill Switch Active"},
              "properties": [
                {
                  "id": "color",
                  "value": {"mode": "thresholds"}
                },
                {
                  "id": "thresholds", 
                  "value": {
                    "steps": [
                      {"color": "green", "value": 0},
                      {"color": "red", "value": 0.5}
                    ]
                  }
                }
              ]
            }
          ]
        },
        "options": {
          "orientation": "vertical",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "colorMode": "background"
        }
      },
      {
        "id": 3,
        "title": "Circuit Breaker State",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "circuit_breaker_state",
            "legendFormat": "Circuit State"
          },
          {
            "expr": "circuit_breaker_failures_total",
            "legendFormat": "Total Failures"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 2}
              ]
            },
            "unit": "short",
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {"text": "CLOSED", "color": "green"},
                  "1": {"text": "OPEN", "color": "red"}, 
                  "2": {"text": "HALF_OPEN", "color": "yellow"}
                }
              }
            ]
          }
        },
        "options": {
          "orientation": "vertical",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "colorMode": "background"
        }
      },
      {
        "id": 4,
        "title": "Evidence Ledger Integrity",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "ledger_verify_ok",
            "legendFormat": "Ledger Intact"
          },
          {
            "expr": "sum(compliance_hash_chain_breaks_total)",
            "legendFormat": "Chain Breaks"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "unit": "short",
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {"text": "BROKEN", "color": "red"},
                  "1": {"text": "INTACT", "color": "green"}
                }
              }
            ]
          }
        },
        "options": {
          "orientation": "vertical",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "colorMode": "background"
        }
      },
      {
        "id": 5,
        "title": "PII Detection Patterns Over Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(pii_violations_total[5m]) * 300",
            "legendFormat": "PII Violations/5min"
          },
          {
            "expr": "rate(pii_checks_total[5m]) * 300",
            "legendFormat": "PII Checks/5min"
          },
          {
            "expr": "sum by (pattern_type) (rate(pii_patterns_detected[5m])) * 300",
            "legendFormat": "{{pattern_type}} Patterns/5min"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short",
            "min": 0,
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "PII Violations/5min"},
              "properties": [
                {
                  "id": "color",
                  "value": {"mode": "fixed", "fixedColor": "red"}
                },
                {
                  "id": "custom.lineWidth",
                  "value": 3
                }
              ]
            }
          ]
        },
        "options": {
          "tooltip": {
            "mode": "multi"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 6,
        "title": "Security Event Timeline",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "increase(budget_kill_switch_activations_total[1m])",
            "legendFormat": "Kill Switch Activations"
          },
          {
            "expr": "increase(circuit_breaker_opened_total[1m])",
            "legendFormat": "Circuit Breaker Opens"
          },
          {
            "expr": "increase(pii_violations_total[1m])",
            "legendFormat": "PII Violations"
          },
          {
            "expr": "increase(compliance_hash_chain_breaks_total[1m])",
            "legendFormat": "Hash Chain Breaks"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short",
            "min": 0,
            "custom": {
              "drawStyle": "bars",
              "barAlignment": 0
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 7,
        "title": "Access Control & Audit",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "sum by (reviewer_id) (compliance_reviews_completed_total)",
            "legendFormat": "Reviews by {{reviewer_id}}"
          },
          {
            "expr": "sum by (submitted_by) (compliance_reviews_submitted_total)",
            "legendFormat": "Submissions by {{submitted_by}}"
          },
          {
            "expr": "sum by (overridden_by) (budget_kill_switch_overrides_total)",
            "legendFormat": "Override by {{overridden_by}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": true,
              "displayName": "Value"
            }
          ]
        }
      },
      {
        "id": 8,
        "title": "DORA Compliance Violations",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "clock_deadline_miss_total",
            "legendFormat": "Deadline Misses"
          },
          {
            "expr": "sum(dora_compliance_violations_total)",
            "legendFormat": "Total DORA Violations"
          },
          {
            "expr": "incidents_clock_validation_failures_total",
            "legendFormat": "Clock Validation Failures"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "red", "value": 0.1}
              ]
            },
            "unit": "short",
            "min": 0
          }
        },
        "options": {
          "orientation": "vertical",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "colorMode": "background"
        }
      },
      {
        "id": 9,
        "title": "Payload Size Distribution",
        "type": "histogram",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 24},
        "targets": [
          {
            "expr": "pii_payload_size_bytes_bucket",
            "legendFormat": "PII Check Payloads"
          },
          {
            "expr": "parallel_payload_size_bytes_bucket",
            "legendFormat": "Parallel API Payloads"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "bytes"
          }
        },
        "options": {
          "bucketSize": 1000,
          "bucketOffset": 0
        }
      },
      {
        "id": 10,
        "title": "Security Metrics Summary",
        "type": "table",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 24},
        "targets": [
          {
            "expr": "pii_violations_total",
            "legendFormat": "PII Violations (MUST=0)"
          },
          {
            "expr": "budget_kill_switch_active",
            "legendFormat": "Kill Switch Active"
          },
          {
            "expr": "circuit_breaker_state",
            "legendFormat": "Circuit Breaker State"
          },
          {
            "expr": "ledger_verify_ok",
            "legendFormat": "Evidence Ledger OK"
          },
          {
            "expr": "clock_deadline_miss_total",
            "legendFormat": "DORA Deadline Misses"
          },
          {
            "expr": "compliance_reviews_sla_breached_total",
            "legendFormat": "Review SLA Breaches"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "red", "value": 0.1}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": true,
              "displayName": "Value"
            }
          ]
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Critical Security Events",
          "enable": true,
          "iconColor": "red",
          "datasource": "prometheus",
          "expr": "changes(pii_violations_total[1m]) > 0 or changes(budget_kill_switch_activations_total[1m]) > 0 or changes(compliance_hash_chain_breaks_total[1m]) > 0"
        },
        {
          "name": "Circuit Breaker Events",
          "enable": true,
          "iconColor": "orange",
          "datasource": "prometheus", 
          "expr": "changes(circuit_breaker_state[1m]) > 0"
        },
        {
          "name": "DORA Violations",
          "enable": true,
          "iconColor": "purple",
          "datasource": "prometheus",
          "expr": "changes(clock_deadline_miss_total[1m]) > 0"
        }
      ]
    },
    "templating": {
      "list": [
        {
          "name": "severity",
          "type": "query",
          "query": "label_values(severity)",
          "current": {
            "value": "all",
            "text": "All Severities"
          },
          "includeAll": true
        },
        {
          "name": "module",
          "type": "query", 
          "query": "label_values(module)",
          "current": {
            "value": "all",
            "text": "All Modules"
          },
          "includeAll": true
        }
      ]
    },
    "alerts": [
      {
        "name": "PII Violation Immediate Alert",
        "frequency": "5s",
        "conditions": [
          {
            "query": {"queryType": "", "refId": "A", "expr": "pii_violations_total"},
            "reducer": {"type": "last", "params": []},
            "evaluator": {"params": [0], "type": "gt"}
          }
        ],
        "executionErrorState": "alerting",
        "noDataState": "no_data", 
        "for": "0s",
        "annotations": {
          "description": "CRITICAL: PII violation detected! Immediate investigation required.",
          "runbook_url": "https://wiki.company.com/regops/pii-violation-response"
        },
        "labels": {
          "severity": "critical",
          "team": "security"
        }
      },
      {
        "name": "Kill Switch Activation Alert",
        "frequency": "10s",
        "conditions": [
          {
            "query": {"queryType": "", "refId": "A", "expr": "budget_kill_switch_active"},
            "reducer": {"type": "last", "params": []},
            "evaluator": {"params": [0], "type": "gt"}
          }
        ],
        "executionErrorState": "alerting",
        "noDataState": "no_data",
        "for": "0s",
        "annotations": {
          "description": "Budget kill switch activated! All Parallel.ai calls blocked at 95% threshold.",
          "runbook_url": "https://wiki.company.com/regops/kill-switch-response"
        },
        "labels": {
          "severity": "critical",
          "team": "ops"
        }
      },
      {
        "name": "Evidence Ledger Integrity Failure",
        "frequency": "30s",
        "conditions": [
          {
            "query": {"queryType": "", "refId": "A", "expr": "ledger_verify_ok"},
            "reducer": {"type": "last", "params": []},
            "evaluator": {"params": [1], "type": "lt"}
          }
        ],
        "executionErrorState": "alerting",
        "noDataState": "alerting",
        "for": "0s",
        "annotations": {
          "description": "Evidence ledger hash chain integrity failure detected! Audit trail compromised.",
          "runbook_url": "https://wiki.company.com/regops/ledger-integrity-response"
        },
        "labels": {
          "severity": "critical",
          "team": "compliance"
        }
      }
    ]
  }
}